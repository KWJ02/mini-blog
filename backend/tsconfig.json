{
	"compilerOptions": {
		"target": "es5",
		"lib": ["dom", "es2015"],
		"module": "commonjs",
		"outDir": "./dist",
		"rootDir": "./", // backend 폴더 자체를 루트로 지정
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"typeRoots": ["./types", "./node_modules/@types"]
	},
	"include": ["backend/**/*.ts", "types/**/*.d.ts"],
	"exclude": ["node_modules"]
}
