{
	"compilerOptions": {
		"jsx": "react-jsx", // 최신 JSX 변환 방식 사용
		"target": "es2016", // JavaScript 언어 버전 설정
		"module": "commonjs", // CommonJS 모듈 사용
		"esModuleInterop": true, // CommonJS 모듈을 React와 호환되도록 추가 코드 생성
		"forceConsistentCasingInFileNames": true, // 대소문자 구분 강제
		"strict": true, // 모든 엄격한 타입 체크 옵션 활성화
		"skipLibCheck": true, // .d.ts 파일의 타입 체크를 생략
		"moduleResolution": "node", // Node.js 방식으로 모듈 해석
		"resolveJsonModule": true, // JSON 모듈을 가져오는 기능 활성화
		"allowJs": true, // JavaScript 파일도 허용
		"baseUrl": ".", // 절대 경로를 사용하기 위한 Base 디렉토리를 설정한다.
		"paths": {
			"@/*": ["src/*"],
			"@/components/*": ["src/components/*"],
			"@/pages/*": ["src/pages/*"],
			"@/assets/*": ["src/assets/*"],
			"@/route/*": ["src/route/*"],
			"@/types/*": ["src/types/*"]
		}
	},

	"include": ["src"]
}
